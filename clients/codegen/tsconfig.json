{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "decorators",
      "dom",
      "es5",
      "scripthost"
    ]
  }
}
