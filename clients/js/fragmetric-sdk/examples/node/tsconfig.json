{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "esnext",
    "noEmit": true,

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  }
}
