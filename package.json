{
  "name": "@fragmetric-labs/contracts",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.8.1",
  "scripts": {
    "lint": "prettier \"**/*.{ts,mjs,cjs}\" --write",
    "lint:check": "prettier \"**/*.{ts,mjs,cjs}\" --check",
    "test": "pnpm vitest --run",
    "test:watch": "pnpm vitest --ui",
    "test:coverage": "pnpm vitest --coverage --run",
    "build": "pnpm --filter ./clients/codegen build && pnpm --filter \\!./clients/codegen build",
    "codegen": "pnpm --filter ./clients/codegen build",
    "keypairs:local": "mkdir -p ./target/deploy && cp ./keypairs/restaking/shared_local_program_4qEHCzsLFUnw8jmhmRSmAK5VhZVoSD1iVqukAf92yHi5.json ./target/deploy/restaking_keypair.json && cp ./keypairs/solv/shared_local_program_9beGuWXNoKPKCApT6xJUm5435Fz8EMGzoTTXgkcf3zAz.json ./target/deploy/solv_keypair.json",
    "keypairs": "cd keypairs && (which jq 1>/dev/null || brew install jq) && aws secretsmanager get-secret-value --profile encrypt_dev --secret-id wallet --region ap-northeast-2 --output json | jq .SecretString | jq -c fromjson | jq -r 'to_entries[] | \"\\(.key) \\(.value)\"' | while read -r key value; do echo $key; echo $value > $key; done",
    "dev": "pnpm dev:restaking",
    "dev:restaking": "PROGRAM=restaking ./programs/testutil/cli.executable.ts connect --keypairs ./keypairs ./keypairs/restaking ./keypairs/solv ledger",
    "dev:solv": "PROGRAM=solv ./programs/testutil/cli.executable.ts connect --keypairs ./keypairs ./keypairs/restaking ./keypairs/solv ledger",
    "connect": "./clients/js/fragmetric-sdk/src/cli/cli.executable.ts connect --keypairs ./keypairs/wallet.json ./keypairs/restaking ./keypairs/solv ledger"
  },
  "devDependencies": {
    "@fragmetric-labs/sdk": "workspace:*",
    "@fragmetric-labs/testutil": "workspace:*",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1",
    "ws": "^8.18.1",
    "@solana/kit": "^2.1.0"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.0",
    "@ledgerhq/hw-app-solana": "^7.2.2",
    "@ledgerhq/hw-transport": "^6.31.4",
    "@ledgerhq/hw-transport-node-hid-singleton": "^6.31.3",
    "@marinade.finance/marinade-ts-sdk": "^5.0.13",
    "@metaplex-foundation/mpl-token-metadata": "^3.2.1",
    "@metaplex-foundation/umi": "^0.9.2",
    "@metaplex-foundation/umi-bundle-defaults": "^0.9.2",
    "@solana/spl-stake-pool": "^1.1.8",
    "@solana/spl-token-3.x": "npm:@solana/spl-token@^0.3.8",
    "@solana/spl-token-metadata": "^0.1.6",
    "@solana/web3.js": "^1.98.0",
    "@types/bn.js": "^5.1.0",
    "@types/ed25519": "^0.0.3",
    "chalk": "^5.3.0",
    "bs58": "^6.0.0",
    "@types/chai": "^4.3.16",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^9.0.0",
    "@types/node": "^22.5.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.2",
    "ed25519": "0.0.5",
    "mocha": "^9.0.3",
    "mocha-steps": "^1.3.0",
    "node-ansi-logger": "^3.0.0",
    "pretty-repl": "^4.0.1",
    "toml": "^3.0.0",
    "ts-mocha": "^10.0.0",
    "tslib": "^2.7.0"
  }
}
